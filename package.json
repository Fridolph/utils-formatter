{
  "name": "utils-formatter",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "rollup -c --watch",
    "check": "tsc --noEmit",
    "build": "npx rollup -c rollup.config.prod.mjs",
    "clean": "rm -rf dist && rm -rf dist-temp",
    "lint": "pnpm exec biome lint --write src",
    "test": "npx jest",
    "debug": "node --inspect-brk -r ts-node/register src/tests/others/utils.test.ts",
    "test:watch": "npx jest --watch",
    "coverage": "npx jest --coverage",
    "coverage:badge": "node scripts/generate-coverage-badge.js",
    "tsdocs": "npx typedoc --out docs/apis --entryPoints src/main.ts --hideGenerator",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "readme": "npx typedoc --plugin typedoc-plugin-markdown --out ./docs-markdown --entryPoints src/main.ts --hideGenerator --excludeNotDocumented false --readme none --entryPointStrategy expand --githubPages false && cat ./docs-markdown/README.md > NEWREADME.md && rm -rf ./docs-markdown && echo 'README generated as NEWREADME.md to prevent accidental overwrites'",
    "docs:full": "pnpm run readme && pnpm run docs",
    "semantic-release": "npx semantic-release",
    "prepublishOnly": "pnpm run build",
    "release": "npx standard-version",
    "release:minor": "npx standard-version --release-as minor",
    "release:major": "npx standard-version --release-as major",
    "release:patch": "npx standard-version --release-as patch"
  },
  "keywords": [
    "formatter",
    "calculator",
    "precision",
    "currency"
  ],
  "author": "Fridolph",
  "license": "Apache License",
  "description": "Formatter tool library, convert Number or string to corresponding output according to configuration.",
  "dependencies": {
    "currency.js": "^2.0.4",
    "rollup-plugin-dts": "^6.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime-corejs3": "^7.28.4",
    "@biomejs/biome": "2.2.2",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "babel-jest": "^30.0.5",
    "esbuild": "^0.25.9",
    "jest": "^30.0.5",
    "nyc": "^17.1.0",
    "rolldown": "1.0.0-beta.35",
    "rollup": "^4.50.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "semantic-release": "^24.2.7",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsdoc-markdown": "^1.4.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.11",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2",
    "vitepress": "^1.6.4"
  },
  "packageManager": "pnpm@10.0.0"
}